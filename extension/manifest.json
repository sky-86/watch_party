{
  "manifest_version": 2,
  "version": "1.0.2",
  "name": "Watch Party",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "icons": {
    "48": "icons/watch_party_48.png"
  },

  "browser_action": {
    "default_icon": "icons/watch_party_32.png",
    "default_title": "Watch Party",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
