{
  "manifest_version": 2,
  "version": "0.1",
  "name": "Watch Party",
  "icons": {
    "48": "icons/watch_party_48.png"
  },
  "permissions": [
    "activeTab",
    "notifications"
  ],
  "browser_action": {
    "default_title": "Watch Party",
    "default_icon": "icons/watch_party_32.png",
    "default_popup": "popup/popup.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  }
}
